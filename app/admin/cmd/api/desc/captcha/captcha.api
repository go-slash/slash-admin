syntax = "v1"

info(
    title: "captcha api"
    desc: "captcha api"
    author: "waltcow"
    email: "waltcow@gmail.com"
    version: "v1.0"
)

import "base.api"

// The response data of captcha | 验证码返回数据
type CaptchaInfoResp {
    CaptchaId string `json:"captchaId"`
    ImgPath string `json:"imgPath"`
}

@server(
    group: captcha
)

service core {
    @doc("Get captcha | 获取验证码")
    @handler getCaptcha
    get /captcha returns (CaptchaInfoResp)
}